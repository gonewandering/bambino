<div id="gallery-editor">
	<h1>Gallery Editor</h1>
	<hr />
	<form action="/editor/galleries" method="post">
		<div class="form-group">
			<label for="title">Gallery Title</label>
			<input class="form-control input-lg" type="text" name="title" value="{{ gallery.title }}" placeholder="New Artworks...">
		</div>
		<div class="form-group">
			<label for="title">Gallery Description</label>
			<input class="form-control input-lg" type="text" name="description" value="{{ gallery.description }}" placeholder="Great works of art by me">
		</div>
		<hr />
		<input type="hidden" name="id" value="{{ gallery.id }}">
		<button class="btn btn-lg btn-block btn-success">Add/Update Gallery</button>
	</form>
</div>