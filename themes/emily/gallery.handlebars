<div class="navigation-holder">{{> navigation }}</div>

<div class="container gallery fade eas">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-2">
      <h2>GALLERY <span class="subtitle">{{ Page.Gallery.title }}</span></h2>
    </div>
  </div>
	<div class="row">
		<div class="col-sm-4 col-sm-offset-2" style="padding-right: 0; ">
			<div class="matrix">
  			{{#each Page.Gallery.Artworks }}
          <div class="matrix-item">
            <div class="img-wrapper">
              <a href="#" data-toggle="modal" data-target="#img-{{ this.id }}">
                <img src="{{ this.square }}">
              </a>
            </div>
            <div class="modal" id="img-{{ this.id }}" tabindex="-1" role="dialog" aria-labelledby="{{ this.title }}" aria-hidden="true">
              <div class="modal-dialog modal-close">
                <div class="modal-content">
                  <div class="modal-body">
                    <div class="arrow forward-one">
                      <h1>
                        <a href="#" class="forward-one">
                          <i class="fa fa-angle-right"></i>
                        </a>
                      </h1>
                    </div>
                    <div class="arrow back-one">
                      <h1>
                        <a href="#" class="backward-one"><i class="fa fa-angle-left"></i></a>
                      </h1>
                    </div>
                    <div class="modal-image">
                      <img src="{{ this.display }}" />
                    </div>
                    <h5>{{ this.title }}</h5>
                    <p>{{ this.description }}</p>
                    {{#if this.size }}
                    <p>{{ this.size }} / {{ this.medium }}</p>
                    {{/if }}
                  </div>
                </div>
              </div>
            </div>
          </div>
        {{/each }}
      </div>
      <div class="matrix-footer">
        <a href="#" class="backward">Backward</a> /
        <span class="min">0</span> of
        <span class="max">0</span> /
        <a href="#" class="forward">Forward</a>
      </div>
		</div>

    <div class="col-sm-6">
        <h4>Paintings</h4>
        <ul class="list-unstyled gallery-list">
          {{#each Page.Galleries }}
            <li>
              <a href="/gallery/{{ this.id }}">{{ this.title }}</a>
            </li>
          {{/each }}
        <ul>
    </div>
	</div>
</div>
