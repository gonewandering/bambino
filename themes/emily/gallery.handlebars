<div class="navigation-holder">{{> navigation }}</div>

<div class="container gallery fade eas">
  <div class="row">
    <div class="col-sm-10 col-sm-offset-2">
      <h2>GALLERY <span class="subtitle">{{ Page.Gallery.title }}</span></h2>
    </div>
  </div>
	<div class="row">
		<div class="col-sm-4 col-sm-offset-2" style="padding-right: 0; ">
			<div class="matrix">
  			{{#each Page.Gallery.Artworks }}
          <div class="matrix-item">
            <div class="img-wrapper">
              <a href="#" data-toggle="modal" data-target="#img-{{ this.id }}">
                <img src="{{ this.square }}">
              </a>

              <div class="modal fade" id="img-{{ this.id }}" tabindex="-1" role="dialog" aria-labelledby="{{ this.title }}" aria-hidden="true">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <div class="modal-body">
                      <div class="modal-image">
                        <img src="{{ this.display }}" />
                      </div>
                      <h5>{{ this.title }}</h5>
                      <p>{{ this.description }}</p>
                      <p>{{ this.size }} / {{ this.medium }} / <a href="{{ this.full }}">Download Full</a></p>
                    </div>
                  </div>
                </div>
              </div>

            </div>
          </div>
        {{/each }}
      </div>
		</div>

    <div class="col-sm-6">
        <h4>Paintings</h4>
        <ul class="list-unstyled">
          {{#each Page.Galleries }}
            <li>
              <a href="/gallery/{{ this.id }}">{{ this.title }}</a>
            </li>
          {{/each }}
        <ul>
    </div>
	</div>
</div>
